<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#4472CA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/edit_layout_perfil"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Datos Personales"
                    android:gravity="center"
                    android:fontFamily="@font/josebold"
                    android:textSize="30dp"
                    android:textColor="@color/black"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/FotoPerfil"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:background="@drawable/image_prefil"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="#92B4F4"
                        android:layout_marginTop="20dp"

                        >

                        <ImageView
                            android:id="@+id/editFotoPerfil"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity=""
                            android:background="@drawable/fotoperfil"
                            android:clickable="true"

                            />
                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#4472CA"

                >
                <TextView
                    android:id="@+id/numeroNotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/monoregular"
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notas"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/monoregular"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#4472CA"
                >
                <TextView
                    android:id="@+id/numeroFotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/monoregular"
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fotos"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/monoregular"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"

                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_layout_perfil"
            android:layout_margin="15dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de Usuario"
                    android:gravity="center"
                    android:fontFamily="@font/monobold"
                    android:textSize="20dp"
                    android:textColor="#4472CA"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <EditText
                        android:id="@+id/cambiarUsuario"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/josebold"
                        android:textSize="15dp"
                        android:textColor="#4472CA"
                        />
                    <ImageView
                        android:id="@+id/editNomUsuario"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/botones_perfil"
                        android:src="@drawable/edit_icon"/>



                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_layout_perfil"
            android:layout_margin="15dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContraseÃ±a"
                android:gravity="center"
                android:fontFamily="@font/monobold"
                android:textSize="20dp"
                android:textColor="#4472CA"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <!--
                <EditText
                    android:id="@+id/editContra"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/josebold"
                    android:textSize="15dp"
                    android:textColor="#4472CA"
                    />
                    -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    app:boxStrokeColor="@color/black"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:endIconMode="password_toggle"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editContra"
                        android:layout_width="260dp"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:padding="0dp"
                        android:fontFamily="@font/josebold"
                        android:textSize="15dp"
                        />


                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:id="@+id/btnEditContra"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/edit_icon"
                    android:background="@drawable/botones_perfil"
                    />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="190dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/btnVolver"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/volver"
                    android:layout_gravity="left"
                    android:layout_marginBottom="45dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:textSize="15dp"
                    android:fontFamily="@font/monobold"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>



        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            />

    </LinearLayout>



</LinearLayout>