<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#92B4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="6">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="#5E7CE2"
            app:strokeColor="#5E7CE2"
            app:shapeAppearance="@style/header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/monobold"
                android:gravity="center"
                android:text="Olvidaste tu contraseÃ±a?"
                android:textColor="@color/white"
                android:textSize="40dp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center">
        <!-- Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:endIconMode="clear_text"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtemailRecover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:fontFamily="monospace"
                    android:textSize="13dp"
                    android:padding="0dp"
                    android:hint="email@gmail.com "
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <!-- Boton Login -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/monobold"
                android:gravity="center"
                android:text="Enviar"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ya tienes una Cuenta?"
                android:fontFamily="@font/monoregular"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <android.widget.Button
                android:id="@+id/btnBacktoLogin"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:text="Login"
                android:textSize="14dp"
                android:fontFamily="@font/monobold"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_login_forgot"
                android:textColor="#5E7CE2"
                android:gravity="center"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_weight="6.8"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="#5E7CE2"
            android:layout_marginLeft="356dp"
            app:shapeAppearance="@style/adorno1"
            app:strokeColor="#5E7CE2">

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>





</LinearLayout>