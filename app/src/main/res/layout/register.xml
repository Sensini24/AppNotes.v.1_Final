<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#92B4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="6">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="#5E7CE2"
            app:strokeColor="#5E7CE2"
            app:shapeAppearance="@style/header">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="App Notes"
                android:fontFamily="@font/monobold"
                android:textSize="15dp"
                android:textColor="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">
        <!-- Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/black"
                android:fontFamily="@font/monoregular"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:endIconMode="clear_text"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:fontFamily="monospace"
                    android:textSize="13dp"
                    android:padding="0dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Email -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:fontFamily="@font/monoregular"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:endIconMode="clear_text"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtemailRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:fontFamily="monospace"
                    android:textSize="13dp"
                    android:padding="0dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <!-- Contraseña -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textColor="@color/black"
                android:fontFamily="@font/monoregular"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:endIconMode="password_toggle"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtcontraseniaRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:fontFamily="monospace"
                    android:textSize="13dp"
                    />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <!-- Boton Login -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:text="Registrar"
                android:fontFamily="@font/monoregular"
                android:textSize="20dp"
                android:backgroundTint="@color/black">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="-60dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ya tienes una Cuenta?"
                android:gravity="center"
                android:fontFamily="@font/monoregular"
                android:textColor="@color/white"
                />

            <android.widget.Button
                android:id="@+id/txtSignUp"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:text="Login"
                android:textSize="14dp"
                android:fontFamily="@font/monobold"
                android:background="@drawable/boton_login_forgot"
                android:textColor="#5E7CE2"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="#5E7CE2"
            android:layout_marginLeft="356dp"
            app:shapeAppearance="@style/adorno1"
            app:strokeColor="#5E7CE2">

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>





</LinearLayout>